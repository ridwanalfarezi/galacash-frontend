#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Run lint-staged for code formatting and linting
npm run lint-staged

# Run type checking
npm run type-check

# Prevent commit if there are TypeScript errors
if [ $? -ne 0 ]; then
  echo "ðŸš« TypeScript check failed. Please fix the errors before committing."
  exit 1
fi